{
  "id": "recommendation_ab_test_variant_b_v2",
  "rule_id": "recommendation_ab_test_variant_b",
  "version_number": 2,
  "content": {
    "version": "1.0",
    "ruleset": "recommendation",
    "rules": [
      {
        "id": "standard_rec",
        "if": {
          "field": "user_activity",
          "op": "gte",
          "value": 3
        },
        "then": {
          "decision": "recommend",
          "weight": 0.85,
          "reason": "Active user"
        }
      },
      {
        "id": "personalized_rec",
        "if": {
          "all": [
            {
              "field": "user_activity",
              "op": "gte",
              "value": 3
            },
            {
              "field": "preference_score",
              "op": "gt",
              "value": 0.6
            }
          ]
        },
        "then": {
          "decision": "recommend",
          "weight": 0.9,
          "reason": "Personalized match"
        }
      }
    ]
  },
  "created_by": "data_team",
  "created_at": "2025-12-21T16:33:35Z",
  "changelog": "Variant B - Added personalization",
  "status": "active"
}