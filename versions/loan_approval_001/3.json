{
  "id": "loan_approval_001_v3",
  "rule_id": "loan_approval_001",
  "version_number": 3,
  "content": {
    "version": "1.0",
    "ruleset": "loan_approval",
    "rules": [
      {
        "id": "small_loan_auto_approve",
        "if": {
          "all": [
            {
              "field": "loan_amount",
              "op": "lt",
              "value": 5000
            },
            {
              "field": "credit_score",
              "op": "gte",
              "value": 700
            }
          ]
        },
        "then": {
          "decision": "approve",
          "weight": 0.85,
          "reason": "Small loan with good credit"
        }
      },
      {
        "id": "large_loan_review",
        "if": {
          "field": "loan_amount",
          "op": "gte",
          "value": 50000
        },
        "then": {
          "decision": "manual_review",
          "weight": 0.95,
          "reason": "Large loan requires manual review"
        }
      },
      {
        "id": "fraud_check",
        "if": {
          "field": "fraud_risk_score",
          "op": "gt",
          "value": 0.8
        },
        "then": {
          "decision": "reject",
          "weight": 1.0,
          "reason": "High fraud risk detected"
        }
      }
    ]
  },
  "created_by": "security_team",
  "created_at": "2025-12-21T16:32:16Z",
  "changelog": "Added fraud detection rule",
  "status": "archived"
}